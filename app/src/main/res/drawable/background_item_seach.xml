<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của viền -->
    <item>
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Hiệu ứng đổ bóng -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Màu trong suốt -->
            <corners android:radius="4dp" /> <!-- Độ cong góc viền -->
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" /> <!-- Khoảng cách đổ bóng -->
            <!-- Màu đổ bóng -->
            <stroke
                android:color="#b7b7b7"
            android:width="1dp" /> <!-- Độ dày đổ bóng -->
        </shape>
    </item>
</layer-list>